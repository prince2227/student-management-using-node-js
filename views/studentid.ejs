<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .error {
            color: red;
            display: none;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Student Form</h2>
        <form id="studentForm" class="needs-validation" novalidate  action="/studentid" method="post">
            <!-- Student ID -->
            <div class="mb-3">
                <label for="studentID" class="form-label">Student ID *</label>
                <input type="text" class="form-control" id="studentID" pattern="^[0-9]+$" required>
                <div class="invalid-feedback">Please enter a valid student ID (only numbers).</div>
            </div>

            <!-- Student First Name -->
            <div class="mb-3">
                <label for="firstName" class="form-label">Student First Name *</label>
                <input type="text" class="form-control" id="firstName" pattern="^[A-Za-z]+$" required>
                <div class="invalid-feedback">Please enter a valid first name (only alphabets).</div>
            </div>

            <!-- Student Last Name -->
            <div class="mb-3">
                <label for="lastName" class="form-label">Student Last Name *</label>
                <input type="text" class="form-control" id="lastName" pattern="^[A-Za-z]+$" required>
                <div class="invalid-feedback">Please enter a valid last name (only alphabets).</div>
            </div>

            <!-- Phone Number -->
            <div class="mb-3">
                <label for="phoneNumber" class="form-label">Phone Number *</label>
                <input type="text" class="form-control" id="phoneNumber" pattern="^\+?[0-9]{13}$" minlength="13" maxlength="13" required>
                <div class="invalid-feedback">Please enter a valid phone number (exactly 13 characters, numbers and + allowed).</div>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label for="email" class="form-label">Email *</label>
                <input type="email" class="form-control" id="email" name="email" required>
                <div class="invalid-feedback">Please enter a valid email address.</div>
            </div>

            <!-- Address Line 1 -->
            <div class="mb-3">
                <label for="address1" class="form-label">Address Line 1 *</label>
                <input type="text" class="form-control" id="address1" pattern="^[A-Za-z/. ]+$" required>
                <div class="invalid-feedback">Please enter a valid address (alphabets, / and . allowed).</div>
            </div>

            <!-- Address Line 2 -->
            <div class="mb-3">
                <label for="address2" class="form-label">Address Line 2</label>
                <input type="text" class="form-control" id="address2" pattern="^[A-Za-z/. ]+$">
                <div class="invalid-feedback">Please enter a valid address (alphabets, / and . allowed).</div>
            </div>

            <!-- Pincode -->
            <div class="mb-3">
                <label for="pincode" class="form-label">Pincode *</label>
                <input type="text" class="form-control" id="pincode" pattern="^[0-9]{6}$" minlength="6" maxlength="6" required>
                <div class="invalid-feedback">Please enter a valid pincode (6 digits).</div>
            </div>

            <!-- Submit button -->
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </div>

    <!-- Bootstrap JS and validation script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Form validation
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
</body>
</html>