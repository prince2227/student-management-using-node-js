<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Year and Program Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        table {
            margin-top: 20px;
            table-layout: fixed;
            font-size: 1 rem;
        }
        table th, table td {
            width: 10%;
            height: 100px;
            vertical-align: middle;
            word-wrap: break-word;
        }
        input[type="checkbox"] {
            transform: scale(4);
        }
        .form-label {
            margin-right: 10px;
        }
    </style>
</head>
<body>
<div class="container mt-4">
    <form action="/submit" method="post">
        <div class="d-flex mb-3">
            <label for="year" class="form-label">Select Year:</label>
            <select id="year" name="year" class="form-select w-auto">
                <script>
                    const currentYear = 2024;
                    for (let i = 0; i < 6; i++) {
                        document.write(`<option value="${currentYear + i}">${currentYear + i}</option>`);
                    }
                </script>
            </select>
        </div>

        <table class="table table-bordered text-center">
            <thead class="table-light">
            <tr>
                <th>Program</th>
                <script>
                    const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
                    months.forEach(month => {
                        document.write(`<th>${month}</th>`);
                    });
                </script>
            </tr>
            </thead>
            <tbody>
            <script>
                ["MBA", "BBA", "MTECH", "BTECH", "BCA", "BSC", "MSC"].forEach(program => {
                    document.write(`<tr>`);
                    document.write(`<td>${program}</td>`);
                    months.forEach(month => {
                        document.write(`<td><input type="checkbox" name="${program}_${month}" /></td>`);
                    });
                    document.write(`</tr>`);
                });
            </script>
            </tbody>
        </table>

        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
